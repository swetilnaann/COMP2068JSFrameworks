{{!< layout}}
<div class="container mt-5" style="max-width: 400px;">
  <h2 class="mb-3 text-center">Create an Account</h2>

  <form method="POST" action="/register">
    <div class="mb-3">
      <label class="form-label">Name</label>
      <input type="text" name="name" class="form-control" required>
    </div>

    <div class="mb-3">
      <label class="form-label">Email</label>
      <input type="email" name="email" class="form-control" required>
    </div>

    <div class="mb-3">
      <label class="form-label">Password</label>
      <input type="password" name="password" class="form-control" required>
    </div>

    <button class="btn btn-success w-100 mt-2">Register</button>
  </form>

  <hr class="my-4">

  <a
    href="/auth/google"
    class="btn btn-outline-danger w-100 mb-2 d-flex justify-content-center align-items-center gap-2 google-btn"
  >
    <i class="bi bi-google"></i>
    <span>Sign up with Google</span>
  </a>

  <a
    href="/auth/github"
    class="btn btn-outline-dark w-100 d-flex justify-content-center align-items-center gap-2"
  >
    <i class="bi bi-github"></i>
    <span>Sign up with GitHub</span>
  </a>

  <p class="mt-3 text-center">
    Already have an account?
    <a href="/login">Login</a>
  </p>
</div>
