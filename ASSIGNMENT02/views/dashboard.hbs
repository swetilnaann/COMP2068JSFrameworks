{{!< layout}}

<div class="text-center mt-5">
  <h2>Welcome, {{user.name}} !</h2>
  <p>Your personal period tracker dashboard.</p>
</div>

{{#if cycleDay}}
  <div class="row justify-content-center mt-4">
    <div class="col-md-6">
      <div class="card shadow-sm">
        <div class="card-body text-center">
          <h5 class="card-title mb-3">Todayâ€™s Cycle Overview</h5>
          <p class="mb-1">
            <strong>Day {{cycleDay}}</strong> of your cycle
          </p>
          <p class="mb-2">
            <em>{{phase}}</em>
          </p>
          <p class="small text-muted mb-0">
            {{tip}}
          </p>
        </div>
      </div>
    </div>
  </div>
{{else}}
  <div class="text-center mt-4">
    <p>No cycles logged yet.</p>
    <p>
      <a href="/add-cycle">Log your first period</a> to start tracking your cycle.
    </p>
  </div>
{{/if}}

<div class="text-center mt-4">
  <a href="/add-cycle" class="btn btn-primary">Add Cycle</a>
  <a href="/cycles" class="btn btn-outline-primary">My Cycles</a>
  <a href="/calendar" class="btn btn-outline-secondary">Calendar</a>
</div>
