        <td>{{notes}}</td>
        <td>
          <a href="/edit-cycle/{{_id}}" class="btn btn-sm btn-warning">Edit</a>
          <a href="/delete-cycle/{{_id}}" class="btn btn-sm btn-danger" onclick="return confirm('Delete this cycle?');">Delete</a>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
  {{else}}
  <p>No cycles logged yet. <a href="/add-cycle">Add your first cycle</a>.</p>
  {{/if}}
