  <a href="/calendar" class="btn btn-outline-secondary mb-3">View Calendar</a>

  {{#if cycles.length}}
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Start Date</th>
        <th>End Date</th>
        <th>Flow</th>
        <th>Symptoms</th>
        <th>Notes</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      {{#each cycles}}
      <tr>
        <td>{{startDate}}</td>
        <td>{{endDate}}</td>
        <td>{{flow}}</td>
        <td>
          {{#if symptoms.cramps}}ðŸ©¸ Cramps {{/if}}
